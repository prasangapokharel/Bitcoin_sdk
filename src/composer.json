{
    "name": "your-vendor/bitcoin-sdk",
    "description": "A comprehensive PHP SDK for Bitcoin-related functionalities",
    "version": "1.0.0",
    
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Prasanga Raman Pokharel",
            "email": "prasangaramanpokharel@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "BitcoinSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BitcoinSdk\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}